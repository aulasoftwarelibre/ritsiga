{% extends 'frontend/base.html.twig' %}

{% block title %}Ha ocurrido un error: {{ status_text }}{% endblock %}

{% block content %}

    <div class="error-page">
        <h2 class="headline text-yellow"> {{ status_code }}</h2>
        <div class="error-content">
            <h3><i class="fa fa-warning text-yellow"></i> Oops! Ha ocurrido un error.</h3>
            <p>
                {{ status_text }}
            </p>
        </div><!-- /.error-content -->
    </div>
{% endblock %}

