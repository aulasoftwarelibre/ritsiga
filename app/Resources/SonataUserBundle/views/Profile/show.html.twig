                                </tr>
                                <tr>
                                    <td>Apellidos:</td>
                                    <td>{{ user.lastname }}</td>
                                </tr>
                                <tr>
                                    <td>Nombre de usuario:</td>
                                    <td>{{ user.username }}</td>
                                </tr>

                                <tr>
                                <tr>
                                    <td>Email:</td>
                                    <td>{{ user.email }}</td>
                                </tr>
                                <tr>
                                    <td>Universidad:</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td>Centro de estudios:</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td>Delegación de estudiantes:</td>
                                    <td>{{ user.getStudentDelegation }}</td>
                                </tr>

                                </tr>

                                </tbody>
                            </table>
                            <a href="{{ path('fos_user_profile_edit')}}" class="btn btn-primary">Cambiar Contraseña</a>
                            <a href="{{ path('fos_user_profile_edit')}}" class="btn btn-primary">Editar Perfil</a>
                            <a href="{{ path('fos_user_security_logout')}}" class="btn btn-primary">Cerrar Sesión</a>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                </div>

            </div>
        </div>
    </div>
