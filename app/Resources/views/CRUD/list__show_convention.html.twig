{% if is_granted('ROLE_ADMIN') or is_granted('ROLE_RITSIGA_ORGANIZER_' ~ object.slug | upper) %}
    <a href="{{ path('sonata_admin_dashboard', {'slug': object.slug}) }}" class="btn btn-sm btn-default view_link" title="{{ 'action_show'|trans({}, 'SonataAdminBundle') }}">
        <i class="glyphicon glyphicon-zoom-in"></i>
        {{ 'action_show'|trans({}, 'SonataAdminBundle') }}
    </a>
{% endif %}