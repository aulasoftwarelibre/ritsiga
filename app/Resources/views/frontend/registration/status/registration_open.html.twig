{%  extends ":frontend/registration:registration.html.twig" %}

{% block right_box %}
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Añadir Inscripciones</h3>
        </div><!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th><h5>Tipo de Entrada</h5></th>
                                <th><h5>Precio</h5></th>
                                <th><h5>Acción</h5></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for type in types %}
                            <tr>
                                <td class="small">
                                    {{ type.name }}<br/><small>Disponible del {{ type.startDate|date('d-m') }} al {{ type.endDate|date('d-m') }}</small>
                                    {% if type.reduced %}<span class="label label-success">{{ 'label.reduced' | trans | upper }}</span>{% endif %}
                                </td>
                                <td class="small">{{ type.price }}€</td>
                                <td>
                                    {% if not is_granted('REGISTRATION_OPEN', type) %}
                                        <span class="label label-danger"><small>No disponible</small></span>
                                    {% elseif not is_granted('SEATS_AVAILABLE', type) %}
                                        <span class="label label-danger"><small>Agotadas</small></span>
                                    {% else %}
                                        <a href="{{ path('participant_new', {'participanttype': type.id}) }}" class="btn btn-success add_inscription btn-xs" style="margin-bottom: 10px;"><i class="fa fa-plus"></i> Añadir</a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div><!-- /.row -->
        </div><!-- ./box-body -->
    </div><!-- /.box -->
{%  endblock %}
{% block column_action %}
                <td><a href="{{ path('participant_edit', {'id':inscription.id }) }}" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar</a>
                    <a href="{{ path('participant_delete', {'id':inscription.id }) }}" type="button" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Borrar</a></td>
{% endblock %}

{% block footer_box %}
    <div class="row">
        <div class="col-md-12" align="right">
            <a href="{{ url('registration_confirmed') }}" class="btn btn-warning">Confirmar inscripciones</a>
        </div><!-- /.col -->
    </div><!-- /.row -->
{% endblock %}
