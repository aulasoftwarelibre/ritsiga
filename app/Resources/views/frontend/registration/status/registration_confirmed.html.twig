{%  extends ":frontend/registration:registration.html.twig" %}

{% block right_box %}
<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">Información de pago</h3>
    </div><!-- /.box-header -->
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
            {% if convention.publishedDraft %}
                <p>Entidad: {{ entity_bank }}</p>
                <p>IBAN: {{ iban }}</p>
                <p>Beneficiario: {{ organization }}</p>
                <p>Concepto: Referencia #{{ registration.id }} {{ registration.convention.slug | upper }}</p>
                <p>Importe: {{ registration.amount }} €</p>
                <a class="btn btn-primary btn-sm" href="{{ path('invoice_draft_download') }}" ><i class="glyphicon glyphicon-download"></i> {{ 'action.download_invoice_draft' | trans }}</a>
            {% else %}
                Actualmente los costes de inscripción no están cerrados. No haga ninguna transferencia hasta que le sea notificado el coste final
                por parte de la organización o de la Junta Directiva.
            {% endif %}
            </div>
        </div><!-- /.row -->
    </div><!-- ./box-body -->
</div><!-- /.box -->
    {% endblock %}
{% block column_action %}
        <td><a href="{{ path('acreditation_download', {'id': participant.id})}}" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-download" aria-hidden="true"></span> Descargar Acreditación</button></td>
{% endblock %}
{% block footer_box %}
<div class="row">
    <div class="col-md-6" align="left">
        <a href="{{ url('registration_open') }}" class="btn btn-warning">Abrir Registro</a>
    </div><!-- /.col -->
    <div class="col-md-6" align="right">
        <a class="btn btn-primary" href="{{ path('travel_information') }}" ><i class="glyphicon glyphicon-road"></i> Información del viaje</a>
    </div><!-- /.col -->
</div>
{% endblock %}

