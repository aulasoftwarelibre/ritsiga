{%  extends "base.html.twig" %}

{% block content %}

        <div class="row">
            {% for convention in conventions %}
            <div class="col-md-4">
                <div class="box box-danger">
                    <div class="box-header with-border">
                        <i class="fa fa-bullhorn"></i>
                        <h3 class="box-title">{{ convention.name }}</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <div class="row">
                            <img class="col-md-12" src="{{ asset('/images/' ~ convention.image) }}">
                        </div>
                        <div class="callout">
                            <h5><i class="fa fa-calendar"></i> Del {{ convention.startsAt|date('d-m-Y') }} al {{ convention.endsAt|date('d-m-Y') }} </h5>
                            <p>There is a problem that we need to fix. A wonderful serenity has taken possession of my entire soul, like these sweet mornings of spring which I enjoy with my whole heart.</p>
                        </div>
                        <a href="{{ convention_url(convention) }}" class="btn btn-warning btn-block btn-flat">Inscribirse</a>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
            {% else %}
                <h3>No hay asambleas</h3>
            {% endfor %}
        </div>



{% endblock %}