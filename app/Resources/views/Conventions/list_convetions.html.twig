{%  extends "base.html.twig" %}

{% block content %}
    <div class="container" >
    {% for convention in conventions %}
    <div class="panel panel-default" id="convention_{{ convention.name }}">
        <div class="convention row">
            <div class="col-md-10"><h3>{{ convention.name }}</h3> <h5>Fecha: {{ convention.startsAt|date('d-m-Y') }} - {{ convention.endsAt|date('d-m-Y') }}</h5></div>
            <div class="col-md-2"><button type="button" class="btn btn-danger" align="right">Inscribirse</button></div>
        </div>
    </div>
    {% else %}
        <h3>No hay asambleas</h3>
    {% endfor %}
    </div>


{% endblock %}