{%  extends "::base.html.twig" %}
{% block javascripts %}
    {{ parent() }}
    <script type="application/javascript">
        $(".add_inscription").click( function()
        {
            $("#participant_participant_type").val($(this).data("inscription"));
            console.log($(this).data("inscription"));
        });

    </script>
{% endblock %}
{% block content %}
    {% block options %}
    {% endblock %}
    <div class="row">
        <div class="col-md-6">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title"><span class="glyphicon glyphicon-file" aria-hidden="true"></span> Resumen Inscripción</h3>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">
                            <p><strong>Universidad:</strong> {{ registration.user.university }}</p>
                            <p><strong>Facultad:</strong> {{ registration.user.college }}</p>
                            <p><strong>Delegacióń de Estudiantes:</strong> {{ registration.user.studentDelegation }}</p>
                            <p><strong>Nombre:</strong> {{ registration.name }}</p>
                            <p><strong>Cargo:</strong> {{ registration.position }}</p>
                        </div>
                    </div><!-- /.row -->
                </div><!-- ./box-body -->
            </div><!-- /.box -->
        </div>
        <div class="col-md-6">
            {% block right_box %}
            {%  endblock %}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Inscripciones</h3>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-hover">
                                <tbody><tr>
                                    <th>Nombre</th>
                                    <th>Apellidos</th>
                                    <th>DNI</th>
                                    <th>Teléfono</th>
                                    <th>Tipo de Inscripción</th>
                                    <th>Acciones</th>
                                </tr></tbody>
                                {% for inscription in registration.participants %}
                                    <tr>
                                        <td>{{ inscription.name }}</td>
                                        <td>{{ inscription.lastname }}</td>
                                        <td>{{ inscription.dni }}</td>
                                        <td>{{ inscription.phone }}</td>
                                        <td>{{ inscription.participanttype.name|title }}</td>
                                        {% block column_action %}
                                       {% endblock %}
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                    </div><!-- /.row -->
                </div><!-- ./box-body -->
                <div class="box-footer">
                    {% block footer_box %}
                    {% endblock %}
                </div>
            </div><!-- /.box -->
        </div><!-- /.col -->

    </div>
    {% block modal %}
    {% endblock %}


{% endblock %}