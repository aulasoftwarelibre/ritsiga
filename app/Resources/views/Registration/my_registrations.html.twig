{%  extends "base.html.twig" %}

{% block content %}

    <div class="row">

            <div class="col-md-6">
                <div class="box box-info">
                    <div class="box-header with-border">
                        <div class="row">
                            <div class="col-md-1"><i class="fa fa-bullhorn"></i></div>
                            <div class="col-md-10"><h3 class="box-title">Inscripciones Confirmadas</h3></div>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        {% for open in registrations_open %}
                        <div class="row">
                            <img class="col-md-12" src="{{ asset('/images/' ~ open.convention.image) }}">
                        </div>
                        <div class="callout">
                            <h4>{{ open.convention }}</h4>
                            Del {{ open.convention.startsAt|date('d-m-Y') }} al {{ open.convention.endsAt|date('d-m-Y') }}
                            <h6>{{ open.name }} - {{ open.position }}<h6>
                        </div>
                        {%  endfor %}
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        <div class="col-md-6">
            <div class="box box-warning">
                <div class="box-header with-border">
                    <div class="row">
                        <div class="col-md-1"><i class="fa fa-check"></i></div>
                        <div class="col-md-10"><h3 class="box-title">Inscripciones Pagadas</h3></div>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                    </div>
                    <div class="callout">
                    </div>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>



{% endblock %}